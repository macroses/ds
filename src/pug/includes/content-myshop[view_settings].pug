                                .myshop_settings_option
                                    .option_item
                                        |Доставка и оплата
                                        button.btn.btn_gray редактировать
                                    .option_control
                                        +select(['скрывать', 'отображать'])
                                .myshop_settings_option
                                    .option_item
                                        |Условия возврата
                                        button.btn.btn_gray редактировать
                                    .option_control
                                        +select(['скрывать', 'отображать'])

                            .myshop_settings_item
                                .title_block Размер изображения
                                .myshop_settings_option
                                    .option_item.img
                                        |Категории на главной странице
                                        .form_element
                                            input(type="text")
                                            |px
                                    .option_control
                                        button.btn.btn_gray сохранить

                                .myshop_settings_option
                                    .option_item.img
                                        |Товара на главной странице
                                        .form_element
                                            input(type="text")
                                            |px
                                    .option_control
                                        button.btn.btn_gray сохранить
                                
                                .myshop_settings_option
                                    .option_item.img
                                        |Товара в категории
