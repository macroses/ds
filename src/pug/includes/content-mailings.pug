                        .form_element
                            input(type="text" placeholder="С" id="date_start")
                        .form_element
                            input(type="text" placeholder="По" id="date_end")
                    button.btn.btn_gray добавить

            .modal-footer
                button.btn.btn_gray(data-toggle="modal" data-target="#mailings_step2" data-dismiss="modal" aria-label="Close") назад
                button.btn.btn_gray(data-toggle="modal" data-target="#mailings_step4" data-dismiss="modal" aria-label="Close") далее

