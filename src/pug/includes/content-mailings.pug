.modal.fade(id="mailings_step3" tabindex="-1" aria-labelledby="mailings_step3" aria-hidden="true")
    .modal-dialog.modal-dialog-centered.modal-lg
        .modal-content
            .modal-header
                .modal-title Шаг 3: Создание списка получателей
                span.close(data-dismiss="modal" aria-label="Close")
                    +icon('modal_close')
            .modal-body
