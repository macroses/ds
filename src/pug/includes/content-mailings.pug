        .modal-content
            .modal-header
                .modal-title Шаг 4: Тема и текст письма рассылки
                span.close(data-dismiss="modal" aria-label="Close")
                    +icon('modal_close')
            .modal-body
                .form_element
                    span Тема и текст рассылки на
                    select
                        option(value="0") русском
                        option(value="1") английском
