                                                //-             +icon('modal_close')
                                                // мультиселект в коллапсе вызывает прыжки по высоте
                                                // необходимо показывать choices_list только при открытом коллапсе.
                                                .form_filter_list
                                                    .form_filter_item 
                                                        .form_filter_title Тип операции:
                                                        .selects.filter
                                                            select#defaultSelect(multiple)
                                                                option(value="0") продажа товаров
                                                                option(value="1") партнерские начисления
                                                                option(value="2") пополнение л/с
                                                                option(value="3") обмен средств
                                                                option(value="4") комиссия с продажи
                                                                option(value="5") возврат средств
                                                                option(value="6") размещение в рекомендуемых
                                                                option(value="7") комиссия при оплате через PayPal
                                                    .form_filter_item 
                                                        .form_filter_title Операции, ожидающие проверки кода:
                                                        +select(['Включить', 'Исключить', 'Показать только такие операции'])
                                                    .form_filter_item 
                                                        .form_filter_title Операции недоступные для вывода:
                                                        +select(['Включить', 'Исключить', 'Показать только такие операции'])
                                                    .form_filter_item 
                                                        .form_filter_title Валюта операции:
                                                        +select(['Все', 'WMZ', 'WMR', 'WME', 'WMU', 'WMX'])
                                        .collapse_btn
                                            span.active.collapsed(data-toggle="collapse" data-target="#goodsFilter" aria-expanded="false" aria-controls="goodsFilter" tabindex="-1") фильтры
